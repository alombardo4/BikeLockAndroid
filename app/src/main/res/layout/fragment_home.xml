<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bikelock.bikelock.gui.views.HomeFragment"
    android:rowCount="3"
    android:columnCount="3">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lock_name"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:textSize="32sp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:text="@string/unlock"
        android:fontFamily="sans-serif"
        android:id="@+id/unlock_button"
        android:textSize="32sp"
        android:background="@drawable/unlock_button_selector"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:weightSum="2">

        <Button
            android:layout_height="40dp"
            android:text="@string/edit_name"
            android:fontFamily="sans-serif"
            android:id="@+id/edit_button"
            android:background="@drawable/edit_button_selector"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_toStartOf="@+id/lock_name"
            android:layout_width="wrap_content" />

        <Button
            android:layout_height="40dp"
            android:text="@string/unpair"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:id="@+id/delete_button"
            android:background="@drawable/delete_button_selector"
            android:layout_weight="1"
            android:layout_toEndOf="@+id/edit_button"
            android:layout_width="wrap_content" />

    </LinearLayout>

</RelativeLayout>
