<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bikelock.bikelock.gui.views.HomeFragment"
    android:rowCount="3"
    android:columnCount="3">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lock_name"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textSize="22dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="@string/unlock"
        android:fontFamily="sans-serif"
        android:id="@+id/unlock_button"
        android:background="@drawable/green_button_selector"
        android:textColor="@android:color/white"
        android:layout_above="@+id/edit_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="@string/edit_name"
        android:fontFamily="sans-serif"
        android:id="@+id/edit_button"
        android:background="@drawable/orange_button_selector"
        android:layout_above="@+id/delete_button"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="@string/unpair"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/white"
        android:id="@+id/delete_button"
        android:background="@drawable/red_button_selector"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
